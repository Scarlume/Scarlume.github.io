---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';
import { getAllPosts, getPostsByCategory, getAllCategories } from '../../utils/posts';

export async function getStaticPaths() {
  const allPosts = getAllPosts();
  const categories = getAllCategories(allPosts);
  
  return categories.map(category => ({
    params: { category: encodeURIComponent(category) },
    props: { 
      category,
      posts: getPostsByCategory(allPosts, category)
    }
  }));
}

const { category } = Astro.params;
const { posts } = Astro.props;
const decodedCategory = decodeURIComponent(category);
const pageTitle = `类别: ${decodedCategory}`;

// 检查是否为子类别
const isSubcategory = decodedCategory.includes('/');
const categoryParts = decodedCategory.split('/');
const parentCategory = categoryParts[0];
const subcategoryName = categoryParts.slice(1).join('/');
---

<BaseLayout pageTitle={pageTitle}>
  <div class="category-header">
    <nav class="breadcrumb">
      <a href="/categories">所有类别</a>
      {isSubcategory && (
        <>
          <span class="separator">›</span>
          <a href={`/categories/${encodeURIComponent(parentCategory)}`}>
            {parentCategory}
          </a>
        </>
      )}
      <span class="separator">›</span>
      <span class="current">
        {isSubcategory ? subcategoryName : decodedCategory}
      </span>
    </nav>
    
    <div class="category-info">
      <h1 class="category-title">
        {isSubcategory ? subcategoryName : decodedCategory}
      </h1>
      <p class="category-description">
        共找到 {posts.length} 篇相关文章
      </p>
    </div>
  </div>

  <div class="posts-container">
    {posts.length > 0 ? (
      <div class="posts-grid">
        {posts.map(post => (
          <BlogPost 
            url={post.url}
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            pubDate={post.frontmatter.pubDate}
            tags={post.frontmatter.tags}
          />
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <h3>暂无文章</h3>
        <p>该类别下还没有发布任何文章。</p>
        <a href="/blog" class="back-link">浏览所有文章</a>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .category-header {
    margin-bottom: 3rem;
  }
  
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }
  
  .breadcrumb a {
    color: #3b82f6;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .breadcrumb a:hover {
    color: #1d4ed8;
    text-decoration: underline;
  }
  
  .separator {
    color: #9ca3af;
  }
  
  .current {
    color: #6b7280;
    font-weight: 500;
  }
  
  .category-info {
    text-align: center;
  }
  
  .category-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 1rem 0;
  }
  
  .category-description {
    font-size: 1.1rem;
    color: #6b7280;
    margin: 0;
  }
  
  .posts-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #f9fafb;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
  }
  
  .empty-state h3 {
    color: #374151;
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }
  
  .empty-state p {
    color: #6b7280;
    margin: 0 0 2rem 0;
  }
  
  .back-link {
    display: inline-block;
    background: #3b82f6;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .back-link:hover {
    background: #2563eb;
    transform: translateY(-1px);
  }
  
  @media (max-width: 768px) {
    .category-title {
      font-size: 2rem;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Dark mode styles */
  :global(html.dark) .breadcrumb a {
    color: #60a5fa;
  }
  
  :global(html.dark) .breadcrumb a:hover {
    color: #93c5fd;
  }
  
  :global(html.dark) .separator {
    color: #6b7280;
  }
  
  :global(html.dark) .current {
    color: #9ca3af;
  }
  
  :global(html.dark) .category-title {
    color: #f1f5f9;
  }
  
  :global(html.dark) .category-description {
    color: #cbd5e1;
  }
  
  :global(html.dark) .empty-state {
    background: #374151;
    border-color: #4b5563;
  }
  
  :global(html.dark) .empty-state h3 {
    color: #f1f5f9;
  }
  
  :global(html.dark) .empty-state p {
    color: #d1d5db;
  }
  
  :global(html.dark) .back-link {
    background: #60a5fa;
  }
  
  :global(html.dark) .back-link:hover {
    background: #3b82f6;
  }
</style>